<!DOCTYPE html>
<html>
<head>
  <title>Homework</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:controller].parameterize %> <%= params[:action].parameterize %>" role="document">
<div class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle Navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "New Homework", new_teacher_homework_path(:teacher_id => current_user.id), class: 'navbar-brand nav-style' %>
      <%= link_to "Homework List", teacher_homework_index_path(:teacher_id => current_user.id), class: 'navbar-brand nav-style' %>
      <div class="update-box">
          <% if flash[:error] %>
            <div id="error_report" class='update-box-sub' style="display: block;"><%= flash[:error] %></div>
          <% end %>

          <% if flash[:update] %>
            <div id="status" class='update-box-sub' style="display: block;"><%= flash[:update] %></div>
          <% end %>
      </div>
    </div>
    <div class="collapse navbar-collapse logout-button">
      <ul class="nav navbar-nav">
        <% if current_user %>
          <li>Logged in as  <%= @teacher.username %></li>
          <li>
            <%= link_to "Logout", logout_url %>
          </li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>
<div class="container">
<%= yield %>
</div>


</body>
</html>
