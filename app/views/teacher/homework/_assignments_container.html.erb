<div class="row submission_container title-div">
	<div class="col-md-3">
		Assignee
	</div>
	<div class="col-md-3">
		Score
	</div>
	<div class="col-md-3">
		Actions
	</div>
	<div class="col-md-3">
		Due
	</div>
</div>

<% assignments.each do |assignment| %>
	<div class="row submission_container">
		<div class="col-md-3">
			<%= assignment.user.username %>
		</div>
		<div class="col-md-3">
		</div>
		<div class="col-md-3">
			<a href="<%= view_assignment_teacher_homework_path(:teacher_id => current_user.id, :id => assignment.id)%>" class='view_submission' data-id='<% assignment.id %>'>view assignment</a>
		</div>
		<div class="col-md-3">
			<%= assignment.due_date.try(:strftime,"%Y-%m-%d") %>
		</div>
	</div>
<% end %>
